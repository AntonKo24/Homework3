<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral_variant90"
    tools:context=".MainActivity">

    <com.tonyk.android.homework3.AnalogClockView
        android:id="@+id/customClock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:hourHandColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:secondHandColor="@color/orange" />

    <Button
        android:id="@+id/pickMinutesColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/Minutes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pickHoursColor"
        app:layout_constraintStart_toEndOf="@+id/pickSecondsColor" />

    <Button
        android:id="@+id/pickSecondsColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/Seconds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pickMinutesColor"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/pickHoursColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/Hours"
        app:layout_constraintBottom_toBottomOf="@+id/pickMinutesColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pickMinutesColor"
        app:layout_constraintTop_toTopOf="@+id/pickMinutesColor" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pick"
        app:layout_constraintBottom_toTopOf="@+id/pickMinutesColor"
        app:layout_constraintEnd_toEndOf="@+id/pickHoursColor"
        app:layout_constraintStart_toStartOf="@+id/pickSecondsColor" />

</androidx.constraintlayout.widget.ConstraintLayout>